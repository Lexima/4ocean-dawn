{{ 'section-pdp-info.css' | asset_url | stylesheet_tag }}

{%- style -%}
.section-{{ section.id }}-padding {
  padding-top: calc({{ section.settings.padding_top }}px * 0.75);
  padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}
{%- endstyle -%}
<div class="pdp-info">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="pdp-info__container">

      <div class="pdp-info__main">
        {%- if section.settings.title != blank  -%}
          <h2 class="title">
            {{ section.settings.title }}
          </h2>
        {%- endif -%}
        {%- if section.settings.description != blank  -%}
          <div class="rte">
            {{ section.settings.description }}
          </div>
        {%- endif -%}
      </div>

      <div class="pdp-info__side{% if section.settings.image != blank  %} pdp-info__side--image{% endif %}">
        {%- if section.settings.image != blank  -%}
          <img
            class="pdp-info__image"
            src="{{ section.settings.image | image_url: width: 550 }}"
            alt="{{ section.settings.image.alt }}"
            loading="lazy"
          >
        {%- else -%}
          <div class="pdp-info__side-title">
            {{ section.settings.rc_title }}
          </div>
          <div class="rte pdp-info__side-description">
            {{ section.settings.rc_description }}
          </div>
        {%- endif -%}
      </div>

    </div>
  </div>
</div>

{% schema %}
{
  "name": "Info",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "header",
      "content": "Right column"
    },
    {
      "type": "text",
      "id": "rc_title",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "rc_description",
      "label": "Description"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "Leave blank to show the text"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Info"
    }
  ]
}
{% endschema %}
